{
  "compilerOptions": {
    "target": "es5",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "strictBindCallApply": true,
    "strictNullChecks": false,
    "strictFunctionTypes": false,
    "strictPropertyInitialization": false,
    "sourceMap": true,
    "baseUrl": "src",
    "outDir": "lib",
    "declaration": true
  },
  "exclude": ["node_modules", "packages/**/*.test.ts", "packages/**/*.test.js"]
}
